{{#*inline "page"}}

<div class="container-fluid">
  <h1>Ongoing &amp; Upcoming Tournaments</h1>
  <table class="table-bordered">
    <tr>
      <th>Tournament</th>
      <th>Description</th>
      <th>Dates</th>
    </tr>
    {{#each data}}
      {{#if this.end_date}}{{else}}
        <tr>
          <td>{{ this.name }}</td>
          <td>{{ this.description }}</td>
          <td>["{{ this.start_date }}", "{{this.end_date}}"]</td>
        </tr>
      {{/if}}
    {{/each}}
  </table>
  <br>
  <h2>Past Tournaments</h2>
  <table class="table-bordered">
    <tr>
      <th>Tournament</th>
      <th>Description</th>
      <th>Dates</th>
    </tr>
    {{#each data}}
    {{#if this.end_date}}
      <tr>
        <td>{{ this.name }}</td>
        <td>{{ this.description }}</td>
        <td>["{{ this.start_date }}", "{{this.end_date}}"]</td>
      </tr>
    {{/if}}
    {{/each}}
  </table>
</div>
<script src="/tournaments.js"></script>

{{/inline}}
{{~> (parent)~}}